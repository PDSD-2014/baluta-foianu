<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.res"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="app.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.activities.PrintActivity"
            android:label="@string/app_name"
	    android:parentActivityName="activities.MainActivity" >
	</activity>
        <activity
            android:name="app.activities.CaptureMenuActivity"
            android:label="@string/title_activity_capture_menu" >
        </activity>
        <activity
            android:name="app.activities.ViewOopsActivity"
            android:label="@string/title_activity_view_oops"
			android:parentActivityName="app.activities.CaptureMenuActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="app.activities.CaptureMenuActivity" />
        </activity>
    </application>

</manifest>
